blockquote.twitter-tweet
  visibility hidden

twitterwidget.twitter-tweet
  transform scale(3) !important
  pointer-events none
  &::shadow
    .EmbeddedTweet
      border none
    .Tweet-brand, .tweet-InformationCircle, img.Emoji
      display none

figure.cover, figure.grow
  width 100%
  img, object
    width 100%

// flex required for print
figure.grow
  flex-grow 1
  display flex
  align-items center

figure.grow-y
  width 100%
  display flex
  justify-content center
  img
    height sh(100)

figure.cover
  figcaption
    position absolute
    left 0
    bottom 0
    right 0
    height 5rem
    font-size 2.5rem
    display flex
    justify-content center
    align-items center
    font-family $family-monospace
    background rgba($c-black-bis, 0.95)
    color $c-white-bis

.hi
  color $c-pri

pre.source
  code.hljs
    background none
    color inherit
    display inline
    overflow initial
    padding 0
  .hljs-comment,
  .hljs-quote,
  .hljs-meta
    color #9e9e9e
  .hljs-comment,
  .hljs-quote
    font-style italic
  .hljs-regexp
    color #757575
  .hljs-string,
  .hljs-symbol
    color $c-pri
