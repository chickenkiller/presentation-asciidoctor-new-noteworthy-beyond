.bespoke-slide
  &.title
    background-color $c-black-bis
    header
      font-size 1.25em
      padding 0 sw(5)
      text-align center
    h1, h2
      line-height 1.2
    h1
      font-size 12.5rem
      font-weight 600
      color $c-pri
      color lighten(saturate($c-pri, 10%), 5%)
    h2
      font-size 5.175rem
      font-weight 200
      color $c-white-bis
    footer
      display none

  &.topic
    font-size 6rem
    text-align center
    //background-color $c-pri
    $g-from = darken($c-pri, 20%)
    $g-to = lighten($c-pri, 10%)
    background-image linear-gradient(141deg, $g-from 0%, $c-pri 71%, $g-to 100%)
    color $c-pri-neg
    h2
      line-height 1.15
