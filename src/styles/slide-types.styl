.bespoke-slide
  &.title
    background-color $c-black-bis
    header
      padding 0 sw(5)
      text-align center
    h1, h2
      line-height 1.2
    h1
      font-size 12.5rem
      font-weight 600
      //color $c-pri
      color lighten(saturate($c-pri, 10%), 5%)
      //color lighten(saturate($c-pri, 5%), 5%)
    h2
      font-size 5.175rem
      font-weight 200
      color $c-white-bis
    footer
      display none

  &.thanks
    background-color $c-black-bis
    h2
      font-size 10rem
      font-weight 600
      //color lighten($c-pri, 10%)
      color lighten(saturate($c-pri, 10%), 5%)

  &.topic
    font-size 6rem
    text-align center
    padding 0 sw(5)
    //background-color $c-pri
    $g-from = darken($c-pri, 20%)
    $g-to = lighten($c-pri, 10%)
    background-image linear-gradient(141deg, $g-from 0%, $c-pri 71%, $g-to 100%)
    color $c-pri-neg
    h2
      line-height 1.15

  &.curtain
    &::after
      content ''
      position absolute
      top -8px
      left 0
      right 0
      height sh(100) + 8px
      background-color $c-black-bis
      border-bottom 8px solid #757575
      .bespoke-overview &
        display none
    &.bespoke-active::after
      height 0
      transition height 2s ease-in-out 1s

   &.code
     h2
       font-weight 300
       font-size 3rem
       background-color $c-black-bis
       color $c-white-bis
       transform rotate(-90deg) translateX(-50%)
       position absolute
       padding 1rem 0
       width sh(100)
       left 0
       top 50%
       transform-origin top left
       text-align center
     pre:not(.screen)
       background #fbf9f9
       //border 0 solid $c-pri
       //border-width 3px 0
       box-shadow inset 0 3px $c-pri, inset 0 -3px $c-pri
       padding 1rem 4rem 1.25rem 1.5rem
       min-width 75%
       position relative
     code[data-lang]::after
       content attr(data-lang)
       position absolute
       right 0
       bottom 3px
       background linear-gradient(to right, transparent 0%, #ece0e0 100%) repeat-x
       color darken($c-pri, 25%)
       padding 0 1rem 0 4rem
       font-size 0.75em
     h2 ~ *
       margin-left 5rem
     &.io
       .build-items
         display flex
         width 100%
         flex-direction column
         align-items center
       .exampleblock, pre.screen
         background $c-pri
         color $c-pri-neg
         margin-top -3px
         padding 1.5rem
         min-width 75%
         box-shadow inset 0 3px $c-pri, inset 0 4px $c-white, inset 0 -3px $c-pri, inset 0 -4px $c-white
       .exampleblock
         font-size 2rem
         font-family Nunito, sans-serif
         font-weight 600
         padding 4rem 1.5rem
       pre.screen
         color $c-pri-neg
