.bespoke-slide
  &.title
    background-color $c-black-bis
    header
      margin -2rem sw(5) 0 sw(5)
      text-align center
    h1, h2
      line-height 1.2
    h1
      font-size 12.5rem
      font-weight $weight-semibold
      //color $c-pri
      color lighten(saturate($c-pri, 10%), 5%)
      //color lighten(saturate($c-pri, 5%), 5%)
    h2
      font-size 5.175rem
      font-weight $weight-light
      color $c-white-bis
    footer
      position absolute
      bottom 0
      width 80%
      color #757575
      font-size 1.75rem
      font-weight $weight-light
      letter-spacing 0.25em
    p.author
      margin-top 0
      height 4rem
      display flex
      align-items flex-start
      > span
        flex 1 0 33.3333%
        text-align center

  &.translations
    h2
      font-family $family-monospace
      font-size 3rem
      font-weight $weight-normal
      flex 1 0 25%
      display flex
      align-items center
      justify-content center
      text-align center
      width 100%
      background $c-pri
      color $c-pri-neg
      box-shadow inset 0 -3px $c-white-bis
    .tags
      flex 1 0 75%
      display flex
      margin-top 0
      display flex
      align-items center
      justify-conent space-between
      flex-wrap wrap
      font-size 2rem
      padding 0 sw(5)
      color $c-white-bis
      background $c-black-bis
      width 100%
      li
        flex 1 0 14%
        text-align center

  &.stats
    .container
      width 100%
      height 85%
      align-items center
      display flex
      flex-flow row wrap
    p
      font-size 5rem
      font-weight $weight-bold
      color darken($c-pri, 10%)
      margin 0
      text-align center
      // TODO move to a helper is thirds
      flex 1 0 33.33%
      line-height 1.25
      .run-in
        display block
        color #424242
        font-size 1.375rem
        font-weight 300
        text-transform uppercase
      .icon
        margin-right 0.25ex

  &.brands
    .build
      display flex
      width 105%
      flex-direction row
      justify-content space-around
      padding 3.5rem 2.5rem
      box-shadow inset 0 2px 5px #bdbdbd, inset 0 -2px 5px #bdbdbd
    figure
      width sw(9)
      img
        filter grayscale(100%)
        width inherit

  &.enorme
    h2
      font-size 10rem

  &.thanks
    background-color $c-black-bis
    h2
      font-size 10rem
      //font-weight $weight-semibold
      font-weight $weight-bold
      //color lighten($c-pri, 10%)
      color lighten(saturate($c-pri, 10%), 5%)

  &.topic, &.feature
    text-align center
    padding 0 sw(5)
    h2
      line-height 1.15

  &.topic
    //background-color $c-pri
    $g-from = darken($c-pri, 20%)
    $g-to = lighten($c-pri, 10%)
    background-image linear-gradient(141deg, $g-from 0%, $c-pri 71%, $g-to 100%)
    color $c-pri-neg
    h2
      font-size 8rem
      font-weight $weight-bold

  &.feature
    background $c-black-bis
    color $c-white-bis
    //color darken($c-pri, 10%)
    h2
      font-size 6rem
      font-weight $weight-light

  &.curtain
    &::after
      content ''
      position absolute
      top -8px
      left 0
      right 0
      height sh(100) + 8px
      background-color $c-black-bis
      border-bottom 8px solid #757575
      .bespoke-overview &
        display none
    &.bespoke-active::after
      height 0
      transition height 2s ease-in-out 1s

   &.code
     h2
       font-weight $weight-light
       font-size 3rem
       background-color $c-black-bis
       color $c-white-bis
       transform rotate(-90deg) translateX(-50%)
       position absolute
       padding 1rem 0
       width sh(100)
       left 0
       top 50%
       transform-origin top left
       text-align center
     pre:not(.screen)
       background #fbf9f9
       //border 0 solid $c-pri
       //border-width 3px 0
       box-shadow inset 0 3px $c-pri, inset 0 -3px $c-pri
       padding 1rem 4rem 1.25rem 1.5rem
       min-width 75%
       position relative
     code[data-lang]::after
       content attr(data-lang)
       position absolute
       right 0
       bottom 3px
       background linear-gradient(to right, transparent 0%, #ece0e0 100%) repeat-x
       color darken($c-pri, 25%)
       padding 0 1rem 0 4rem
       font-size 0.75em
     h2 ~ *
       margin-left 5rem
     &.io
       .build-items
         display flex
         width 100%
         flex-direction column
         align-items center
       .exampleblock, pre.screen
         background $c-pri
         color $c-pri-neg
         margin-top -3px
         padding 1.5rem
         min-width 75%
         box-shadow inset 0 3px $c-pri, inset 0 4px $c-white, inset 0 -3px $c-pri, inset 0 -4px $c-white
       .exampleblock
         font-size 2rem
         font-weight $weight-semibold
         padding 4rem 1.5rem
       pre.screen
         color $c-pri-neg
